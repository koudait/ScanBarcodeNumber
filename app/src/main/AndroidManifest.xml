<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="net.mm2d.scanbarcodecounts"
    >

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <queries>
        <intent>
            <action android:name="android.support.customtabs.action.CustomTabsService" />
        </intent>
    </queries>

    <application
        android:name="net.mm2d.scanbarcodecounts.App"
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/full_backup_content"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.CodeReader"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="s">
        <activity-alias
            android:name=".StartActivity"
            android:exported="true"
            android:targetActivity="net.mm2d.scanbarcodecounts.MainActivity"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity-alias>

        <activity
            android:name="net.mm2d.scanbarcodecounts.MainActivity"
            android:theme="@style/Theme.CodeReader.NoActionBar"
            />
        <activity
            android:name="net.mm2d.scanbarcodecounts.LicenseActivity"
            android:label="@string/options_menu_license"
            android:theme="@style/Theme.CodeReader.NoActionBar"
            />
        <activity
            android:name="net.mm2d.scanbarcodecounts.SettingsActivity"
            android:label="@string/options_menu_settings"
            android:theme="@style/Theme.CodeReader.NoActionBar"
            />
    </application>
</manifest>
